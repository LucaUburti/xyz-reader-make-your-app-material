<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_margin"
    android:layout_marginLeft="@dimen/cardview_margin"
    android:layout_marginRight="@dimen/cardview_margin"
    android:layout_marginTop="@dimen/cardview_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_thumbnail_height"
            android:adjustViewBounds="true"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/article_title_to_subtitle_padding"
            android:paddingLeft="@dimen/article_title_padding"
            android:paddingRight="@dimen/article_title_padding"
            android:paddingTop="@dimen/article_title_padding"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/article_subtitle_padding"
            android:paddingLeft="@dimen/article_subtitle_padding"
            android:paddingRight="@dimen/article_subtitle_padding"
            android:paddingTop="@dimen/article_title_to_subtitle_padding"
            android:textColor="@color/colorSecondaryText" />
    </LinearLayout>

</android.support.v7.widget.CardView>
